<%= form_with(model: [@recipe, recipe_food], url: recipe_recipe_foods_path(@recipe)) do |form| %>
  <% if recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class=" ">
    <%= form.label :food_id %>
    <%= form.select :food_id, options_for_select((@food || []).map { |p| [p.name, p.id] }), include_blank: 'Choose an ingredient' %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>

  <%= form.hidden_field :recipe_id, value: @recipe.id %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
