<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "food_list.css" %>
    <%= stylesheet_link_tag "shopping_list.css" %>
    <%= stylesheet_link_tag "public_recipes.css" %>
  </head>

  <body>
  <%= render "layouts/navbar" %>
  <p class="notice" style="color: green"><%= notice %></p>
  <p class="alert" style="color: red"><%= alert %></p>
 

    <%= yield %>

    <script>
    window.addEventListener('unload', function() {
      document.cookie.split(";").forEach(function(c) {
        document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/");
      });
    });
    </script>
  </body>
</html>